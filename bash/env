#!/usr/bin/env bash
set -o vi

# basics
export EDITOR='emacs'
export TERM='xterm-256color'
export LANG='en_US.UTF-8'
export HISTSIZE=10000
export SAVEHIST=10000
export HISTFILE="$HOME/.histfile"
# export USERWM=`which xmonad`

# java
# export JAVA_OPTS='-d32 -client -Xms64m'
export JAVA_TOOL_OPTIONS='-Dfile.encoding=UTF8'
export LEIN_FAST_TRAMPOLINE=y

# ruby
export RUBYOPT='rubygems'
# export JRUBYOPTS='--ng'
# export RBXOPT=-X19

# paths :D
export NODE_PATH
export CLASSPATH
export PATH="$HOME/dotfiles/bin:$HOME/bin:$HOME/Library/Haskell/bin:/usr/local/bin:/usr/local/share/npm/bin:/usr/local/go/bin:/usr/local/sbin:$PATH"

# shell specific settings
if [ ! -z $BASH_VERSION ]; then
  shopt -s histappend
  export PS1='\n\[\033[0;35m\]\u@\h\[\033[00m\]:\w \nÎ» '
fi
